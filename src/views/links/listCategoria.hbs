<section class="list-data">
    <div class="state">MANTENIMIENTO DE CATEGORIA</div>
    {{#if message }}
        <div class="messageError">{{ message }}</div>
    {{/if}}

    {{#if success }}
        <div class="messageSuccess">{{ success }}</div>
    {{/if}}
    <div class="list-cuerpo">
        <div class="addBoton">
            <p class="boton">
                <a href="/categoria/add">
                    <img src="/img/agregar.png" alt="agregar" width="20px">
                    <strong>Registrar</strong>
                </a>
            </p>
        </div>
        <div class="data-table-pagination">
            <table id="example1" class="data-table">
                <thead>
                    <tr>
                        <th><p class="description-name">Nombre Categor√≠a</p></th>
                        <th><p class="description">Estado</p></th>
                        {{!-- <th><p class="description">Fecha Registro</p></th> --}}
                        <th><p class="description">Editar </p></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td><p class="description-valor">{{nombre_categoria}}</p></td>
                        <td><p class="description">{{estado}}</p></td>
                        {{!-- <td><p class="description">{{fecha_registro}}</p></td> --}}
                        <td>
                            <p class="description"><a href="/categoria/edit/{{id_categoria}}"><img
                            src="/img/editar.png" alt="icon de Editar"></a></p>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>