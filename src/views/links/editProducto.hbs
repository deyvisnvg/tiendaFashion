<section class="registro-data">
    <div class="state"><a href="/producto/product"><i class="icon-arrow-left2 positionIcon"></i></a>EDITAR PRODUCTO</div>
    <div class="data">
        {{#with data}}
        <form action="/producto/update/{{producto.id_producto}}" method="post" enctype="multipart/form-data">
            <div class="data-valor1">
                <p class="description">Código: </p>
                <p><input type="text" name="codigo" value="{{producto.id_producto}}" readonly></p>
            </div>
            <div class="data-valor2">
                <p class="description">Categoría: </p>
                <p>
                    <select name="categoria" required>
                        <option value="{{producto.id_categoria}}" class="optSelect">{{producto.nombre_categoriaFormat}}</option>
                        {{#each categoria}}
                        <option value="{{id_categoria}}">{{nombre_categoria}}</option>
                        {{/each}}
                    </select>
                </p>
            </div>
            <div class="data-valor2">
                <p class="description">Foto: </p>
                {{!-- <input type="hidden" name="foto" value="{{producto.foto}}"> --}}
                <p><input type="file" name="image" value=""></p>
            </div>
            <div class="data-valor2">
                <p class="description">Foto Detalle: </p>
                {{!-- <input type="hidden" name="foto" value="{{producto.foto}}"> --}}
                <p><input type="file" name="image2" value=""></p>
            </div>
            <div class="data-valor2">
                <p class="description">Foto opcional: </p>
                {{!-- <input type="hidden" name="foto_alternativa" value="{{producto.foto_alternativa}}"> --}}
                <p><input type="file" name="image3" value=""></p>
            </div>
            <div class="data-valor2">
                <p class="description">Nombre: </p>
                <p><input type="text" name="nombre_producto" value="{{producto.nombre_producto}}" required pattern="[A-Za-z\s]{3,50}"
                        title="Ingrese solo letras Mayúsculas y minúsculas"></p>
            </div>
            <div class="data-valor2">
                <p class="description">Descripción: </p>
                <p>
                    <textarea name="descripcion" id="" cols="25" rows="10">{{producto.descripcion}}</textarea></p>
            </div>
            <div class="data-valor2">
                <p class="description">Marca: </p>
                <p><input type="text" name="marca" value="{{producto.marca}}"></p>
            </div>
            <div class="data-valor2">
                <p class="description">Precio: </p>
                <p><input type="text" name="precio" value="{{producto.precio}}" required pattern="[0-9.]+" maxlength="6"
                        title="El precio debe establecerse en decimales"></p>
            </div>
            <div class="data-valor2">
                <p class="description">Precio Envío: </p>
                <p><input type="text" name="precio_envio" value="{{producto.precio_envio}}" required pattern="[0-9.]+" maxlength="6"
                        title="El precio debe establecerse en decimales"></p>
            </div>

            <div class="data-boton">
                <p class="boton"><button type="submit">Modificar</button></p>
            </div>
        </form>
        {{/with}}
    </div>
</section>